<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ishank.quiz.quiztype">

    <!-- TODO: Update blank fragment layout -->
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="40dp"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:text="Select Quiz For Technology"
        android:textAlignment="center"
        android:textColor="#3335d7"
        android:textSize="20dp"
        android:layout_height="40dp" />
    <Button
        android:id="@+id/CQuiz"
        android:layout_width="250dp"
        android:text="C Quiz"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="#3335d7"
        android:textColor="#fff"
        android:layout_height="40dp" />
    <Button
        android:id="@+id/CppQuiz"
        android:layout_width="250dp"
        android:text="C++ Quiz"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="#3335d7"
        android:textColor="#fff"
        android:layout_height="40dp" />
    <Button
        android:id="@+id/CsharpQuiz"
        android:layout_width="250dp"
        android:text="C# Quiz"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="#3335d7"
        android:textColor="#fff"
        android:layout_height="40dp" />
    <Button
        android:id="@+id/htmlQuiz"
        android:layout_width="250dp"
        android:text="Html Quiz"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="#3335d7"
        android:textColor="#fff"
        android:layout_height="40dp" />
    <Button
        android:id="@+id/javaQuiz"
        android:layout_width="250dp"
        android:text="Java Quiz"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="#3335d7"
        android:textColor="#fff"
        android:layout_height="40dp" />
    <Button
        android:id="@+id/androidQuiz"
        android:layout_width="250dp"
        android:text="Android Quiz"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="#3335d7"
        android:textColor="#fff"
        android:layout_height="40dp" />


</LinearLayout>
</FrameLayout>
